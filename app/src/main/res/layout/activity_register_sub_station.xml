<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterSubStation"
    android:background="@color/colorPrimary"
    tools:ignore="MissingPrefix">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/btnBackRegSubStationAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/transparent"
            android:src="@drawable/back1" />

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:layout_marginTop="3dp"
            android:id="@+id/progressBarRegSubStation"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            app:mpb_progressStyle="horizontal"
            android:visibility="invisible"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">


            <TextView
                fontPath="fonts/Lato-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please Fill in the Following fields"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />



            <EditText
                android:clickable="true"
                android:focusable="false"
                fontPath="fonts/RobotoCondensed-Regular.ttf"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="Select Station"
                android:id="@+id/ETSelectSubStation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_background_2"
                android:padding="10dp"
                android:textAlignment="center" />



            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhite">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tvEmailSubStationAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="@color/colorYellow" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhite">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tvPasswordSubStationAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="@color/colorYellow" />

            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btnRegisterSubStationAdmin"
                fontPath="fonts/RobotoCondensed-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_background_2"
                android:text="REgister"
                android:textColor="@android:color/white"
                android:textSize="17dp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>