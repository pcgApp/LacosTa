<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewPending"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    tools:ignore="MissingPrefix">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TVDepartedVesselType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="PASSENGER"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/TVDepartedVesselName"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MV MARY JOY"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/TvDistressNotifierad"
                android:textColor="#c92020"
                android:text="This Vessel is in Distress"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/TVDepartedSchedDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MONDAY"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVDepartedOrigin"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FROM : ZAMBOANGA CITY" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/TVDepartedOriginTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 AM"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/TVDepartedDestination"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="DESTINATION : LAMITAN CITY" />

            <TextView
                android:id="@+id/TVDepartedArrivalTime"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 AM"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="VSEI" />

            <TextView
                android:id="@+id/TVVSEIdepart"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:text="Passenger Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:text="Adults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:text="Children"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:text="Infant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:text="Crew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TVAdultsAdminDeparted"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:text="N/A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/TVchildrenAdminDeparted"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:text="N/A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/TVInfantAdminDeparted"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:text="N/A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/TVcrewAdminDeparted"
                    android:layout_weight="0"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:text="N/A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <TextView
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="TOTAL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/TVTotalAdminDeparted"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="N/A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">


                <Button
                    android:id="@+id/BTNArrived"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:text="Arrive"
                    android:textColor="#5b2eae" />

                <Button
                    android:layout_marginLeft="15dp"
                    android:id="@+id/btnDistress"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:text="Distress"
                    android:textColor="#5b2eae" />
            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/TVDepartedImageVessel"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/qz" />
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="bottom|right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hours Travelled"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/TVDepartedHoursTravelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1H : 23M : 24S"
                android:textColor="#000" />

            <TextView
                android:text="Actual Time Departed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/black"
                android:text="8:15 AM"
                android:id="@+id/actualtimeDeparted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:textColor="@color/black"
                android:text="8:15 AM"
                android:id="@+id/hourfornotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:textColor="@color/black"
                android:text="8:15 AM"
                android:id="@+id/minfornotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>